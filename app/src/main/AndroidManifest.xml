<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="soul.listener.com.humiture">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".util.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/logo_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="design_width"
            android:value="768" />
        <meta-data
            android:name="design_height"
            android:value="1280" />

        <activity android:name=".activity.LoginActivity"
            android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.HumitureActivity"
            android:screenOrientation="landscape"
            />
        <activity android:name=".activity.MainActivity"/>
        <activity android:name=".activity.WheatherActivity"/>
        <activity android:name=".activity.LookBlockActivity"
            android:screenOrientation="landscape"
            />
        <activity android:name=".activity.RecordActivity"/>
    </application>

    <uses-permission android:name="android.permission.INTERNET"/>

</manifest>